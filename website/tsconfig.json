{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "include": [
    "src/**/*",
    "./jest-setup.ts",
  ],
  "exclude": [
    "node_modules/*",
    "public/*"
  ],
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2020",
    "importsNotUsedAsValues": "remove",
    "types": ["jest", "node", "cypress", "@testing-library/cypress"],
    "strict": false
  }
}
